<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/t_coordination"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:text="Coordinates: Address does not exist yet!"
        android:textColor="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/b_Current"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_confirm"
        android:layout_alignParentStart="true"
        android:text="Get My Current Location" />

    <EditText
        android:id="@+id/e_address"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t_coordination"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/b_New"
        android:ems="10"
        android:hint="Enter an address..."
        android:inputType="textPersonName"
        android:visibility="visible" />

    <Button
        android:id="@+id/b_New"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/e_address"
        android:text="Search" />

    <TextView
        android:id="@+id/t_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_New"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:text="Address does not exist yet!" />

    <Button
        android:id="@+id/b_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="confirm" />

</RelativeLayout>
